{
    "manifest_version": 3,
    "name": "Chrome Addon v3 Skeleton",
    "description": "A working skeleton of a chrome extension that uses manifest v3",
    "version": "0.0.1",
    "options_page": "settings.html",
    "action": {
        "default_title": "Chrome Addon v3 Skeleton",
        "default_popup": "popup/popup.html"
    },
    "permissions": [],
    "host_permissions": [
        "*://*/*"
    ],
    "background": {
        "service_worker": "service-worker.js"
    },
    "content_scripts": [{
        "js": ["foreground.js"],
        "matches": ["https://github.com/*"]
    }]
}
